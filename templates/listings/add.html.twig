            <input type="text" id="isbn" name="isbn" required>
        </div>
        <div>
            <label for="description">Description :</label>
            <textarea id="description" name="description" rows="4" cols="50" required></textarea>
        </div>
        <div>
            <label for="edition">Ã‰dition :</label>
