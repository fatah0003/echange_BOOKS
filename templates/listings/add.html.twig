            Ajouter une Annonce
        {% endif %}</h1>
<section class="container">
<a class="nav-connect" href="{{ path('home')}}">Retour Ã  l'Accueil</a>
    {{ form_start(form) }}

    <div class="form-element">
        {{ form_label(form.cover) }}
        {{ form_widget(form.cover) }}
        {{ form_errors(form.cover) }}
    </div>
    <div class="form-element">
        {{ form_label(form.back) }}
        {{ form_widget(form.back) }}
        {{ form_errors(form.back) }}
